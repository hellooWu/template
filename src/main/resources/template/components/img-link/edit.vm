<div class="oc-component" name="${cmpName}" type="${cmpType}">
<div class="component-input">
<div class="file-box" style="height:30px;"> 
<input type='text' name='textfield' id='textfield' class='txt' /> 
<input type='button' class='btn' value='浏览...' /> 
<input type="file" class="shareFile file" name="shareFile" onchange="document.getElementById('textfield').value=this.value"/>
</div>
